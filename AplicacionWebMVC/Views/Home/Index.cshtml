    <script type="text/javascript" src="@Url.Content("~/Content/index/plugins/flexslider/jquery.flexslider-min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/index/plugins/flexslider/flexslider.config.js")"></script>

}
